<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layoutPadding">

    <ImageView
        android:id="@+id/imageviewLogo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:id="@+id/edittextUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageviewLogo"
        android:hint="Tài khoản" />

    <EditText
        android:id="@+id/edittextPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextUser"
        android:hint="Mật khẩu"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/buttonCreateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edittextPass"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:text="Tạo tài khoản"
        style="@style/primarySmallTextStyle"/>

    <TextView
        android:id="@+id/buttonForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittextPass"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:text="Quên mật khẩu"
        style="@style/primarySmallTextStyle"
       />

    <Button
        android:id="@+id/buttonLogin"
        style="@style/circleButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonCreateID"
        android:layout_marginTop="10dp"
        android:text="Đăng nhập" />

    <Button
        android:id="@+id/buttonLoginFB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLogin"
        android:layout_marginTop="25dp"
        android:text="Đăng nhập Facebook"
         />

    <Button
        android:id="@+id/buttonLoginMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLoginFB"
        android:layout_marginTop="10dp"
        android:text="Đăng nhập Gmail"
         />

</RelativeLayout>



