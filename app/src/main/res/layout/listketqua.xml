<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tên nhà xe:"
            android:textSize="20dp"
            android:layout_marginTop= "15dp"
            android:textColor="#0000ff"

            />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tennhaxe"
        android:textSize="30dp"
            android:layout_marginTop= "8dp"
            android:textColor="#ff9f0f"
        android:id="@+id/txtTenNhaXe"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Số chỗ :"
            android:textSize="20dp"
            android:layout_marginTop= "15dp"
            android:textColor="#0000ff"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="loaixe"
            android:textSize="40dp"
            android:id="@+id/txtLoaiXe"
            android:textColor="#ff0f1b"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Thời gian đi  :"
            android:textSize="20dp"
            android:layout_marginTop= "15dp"
            android:textColor="#0000ff"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="40dp"
            android:id="@+id/txtTime"
            android:textColor="#ee00ff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <RatingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="loaixe"
            android:textSize="40dp"
            android:id="@+id/rbXepHang"
            android:numStars="4"
            android:stepSize="1.0"
            android:rating="2.0"
            />
    </LinearLayout>

</LinearLayout>